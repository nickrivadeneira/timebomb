%html
  %head
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title Timebomb.io - Signup
    %link{rel: "stylesheet", href: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"}
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}

  %body
    %nav.navbar.navbar-default.navbar-static-top.navbar-inverse{role: 'navigation'}
      .container
        .navbar-header
          %a.navbar-brand{href: "/"} Timebomb
    .container
      .col-md-4.col-md-offset-4
        .well
          %h1 Sign In
          %form{role: 'form', action: '/signin', method: :post}
            .form-group
              %label Email address
              %input.form-control{type: 'email', placeholder: 'user@example.com', name: 'email'}
            .form-group
              %label Password
              %input.form-control{type: 'password', name: 'password'}
            %button.btn.btn-success.btn-block{type: 'submit'} Sign In