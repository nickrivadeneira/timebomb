.container
  .col-md-4.col-md-offset-4
    .well
      %h1 Sign Up
      %form{role: 'form', action: '/users', method: :post}
        .form-group
          %label Email address
          %input.form-control{type: 'email', placeholder: 'user@example.com', name: 'email'}
        .form-group
          %label Password
          %input.form-control{type: 'password', name: 'password'}
        %button.btn.btn-success.btn-block{type: 'submit'} Sign Up